<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :player_id%>
    <%= f.select :player_id, Player.all.collect {|x| [x.first_name, x.id]}, {:include_blank => "Select One"} %> </br>
  </div>
  <div class="field">
    <%= f.label :yellow_cards %>
    <%= f.select :yellow_cards, [0,1]%>
  </div>
  <div class="field">
    <%= f.label :red_cards%>
    <%= f.select :red_cards, [0,1,2] %>

  <div class="field">
    <%= f.label :goals %>
    <%= f.select :goals, Array.new(30){|a| a } %>
  </div>
  ### Agregar id del partido
  <div class="field">
    <%= f.label :match_id %>
    <%= f.select :match_id, Array.new(30){|a| a.to_s*3 }%>
  </div>
### Agregar id del partido

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
