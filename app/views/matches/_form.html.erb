<%= form_for(match) do |f| %>
  <% if match.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
      <% match.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :date %>
    <%= f.text_field :date %>
  </div>
  <div class="field">
    <%= f.label :local %>
    <%= f.select :local, Team.all.collect {|team| [team.name]} %>
  </div>
  <div class="field">
    <%= f.label :visitor %>
    <%= f.select :visitor, Team.all.collect {|team| [team.name]} %>
  </div>
  <div class="field">
    <%= f.label :tournament_name %>
    <%= f.select :tournament_name , Tournament.all.collect {|tour| [tour.name]}%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
